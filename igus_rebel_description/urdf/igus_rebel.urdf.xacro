<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro" name="igus_rebel" >

  <xacro:arg name="gripper" default="none" />

  <xacro:arg name="hardware_protocol" default="simulation" />

  <xacro:include filename="$(find igus_rebel_description)/urdf/igus_rebel.description.xacro"/>
  <xacro:igus_rebel_description  />

  <xacro:include filename="$(find igus_rebel_description)/urdf/igus_rebel.control.xacro"/>
	<xacro:igus_rebel_control hardware_protocol="$(arg hardware_protocol)" />

  <xacro:include filename="$(find igus_rebel_description)/urdf/grippers.xacro"/>
  <xacro:gripper gripper_type="$(arg gripper)"/>
  
  <xacro:include filename="$(find igus_rebel_description)/urdf/camera/oak_d_pro.xacro"/>
  <xacro:oakd_link gripper_type="$(arg gripper)"/>

  <xacro:include filename="$(find igus_rebel_description)/urdf/igus_rebel.gazebo.xacro"/>


  <link name="world" />

  <joint name="world_joint" type="fixed">
    <parent link="world" />
    <child link = "base_link" />
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
  </joint>




</robot>
