  <xacro:include filename="$(find igus_rebel)/urdf/igus_rebel.control.xacro"/>
  <xacro:include filename="$(find igus_rebel)/urdf/igus_rebel.gazebo.xacro"/>

  <xacro:igus_rebel_control arm_id="igus_rebel"/>
  
